@using WeeControl.User.UserApplication.ViewModels.User
@using WeeControl.User.UserApplication
@attribute [Route(Pages.User.RegisterPage)]

@layout RestrictedLayout
@attribute [AllowAnonymous]

@inject RegisterViewModel ViewModel

<div class="card">
    <h4 class="card-header">Please fill the below fields</h4>
    <div class="card-body">
        <EditForm Model="@ViewModel" OnValidSubmit="ViewModel.RegisterAsync">
            <DataAnnotationsValidator/>
            <div class="form-group">
                <label>First Name</label>
                <InputText @bind-Value="ViewModel.FirstName" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.FirstName)"/>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <InputText @bind-Value="ViewModel.LastName" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.LastName)"/>
            </div>
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="ViewModel.Email" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.Email)"/>
            </div>
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="ViewModel.Username" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.Username)"/>
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="ViewModel.Password" type="password" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.Password)"/>
            </div>
            <div class="form-group">
                <label>Mobile No.</label>
                <InputText @bind-Value="ViewModel.MobileNo" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.MobileNo)"/>
            </div>
            <div class="form-group">
                <label>Office</label>
                <InputText @bind-Value="ViewModel.Territory" class="form-control"/>
                <ValidationMessage For="@(() => ViewModel.Territory)"/>
            </div>
            <button class="btn btn-primary">
                @if (ViewModel.IsLoading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Register
            </button>
        </EditForm>
    </div>
</div>

