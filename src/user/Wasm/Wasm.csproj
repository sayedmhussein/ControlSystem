<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>WeeControl.User.Wasm</RootNamespace>
    <Company>sayed.hussein@gmx.com</Company>
    <Product>WeeControl App</Product>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(RunConfiguration)' == 'Wasm' ">
    <ExternalConsole>true</ExternalConsole>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.5" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Authentication" Version="6.0.5" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.5" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="6.0.0" />
    <PackageReference Include="System.Net.Http.Json" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Pages\Employee\" />
    <None Remove="Pages\Employee\Session\" />
  </ItemGroup>
  <ItemGroup>
    <_ContentIncludedByDefault Remove="Pages\Authentication\ForgotPassword.razor" />
    <_ContentIncludedByDefault Remove="Pages\Authentication\Login.razor" />
    <_ContentIncludedByDefault Remove="Pages\Authentication\NewPassword.razor" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="wwwroot\images\logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\UserApplication\UserApplication.csproj" />
  </ItemGroup>
  <ItemGroup>
    <AdditionalFiles Include="Pages\Authentication\LogoutPage.razor" />
  </ItemGroup>
</Project>
