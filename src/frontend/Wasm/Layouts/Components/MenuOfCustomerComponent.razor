@using WeeControl.Host.WebApiService
@using System.Security.Claims
@inject ISecurity Security

<MudMenuItem>Always Appearing</MudMenuItem>

@if (IsCustomer)
{
    <MudMenuItem>Customer Appearing</MudMenuItem>
}

@if (IsEmployee)
{
    <MudMenuItem>Request Service</MudMenuItem>
    @foreach (var p in Pages)
    {
        <MudMenuItem>@p</MudMenuItem>
    }
}

<MudSpacer></MudSpacer>
@if (IsEmployee || IsCustomer)
{
    <MudMenuItem>Edit My Profile</MudMenuItem>
    <MudMenuItem>Send Feedback</MudMenuItem>
}

@code
{
    [Parameter]
    public IEnumerable<string> Pages { get; set; }

    [Parameter]
    public bool IsEmployee { get; set; }
    
    [Parameter]
    public bool IsCustomer { get; set; }
}
