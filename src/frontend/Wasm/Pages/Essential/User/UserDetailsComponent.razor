@using System.Reflection.Emit

<div class="card">
    <div class="card-header">User Details</div>
    <div class="card-body">
        <EditForm Model="someModel">
            <div class="form-group">
                <label>Names</label>
                <div class="container">
                    <div class="row align-items-start">
                        <div class="col col-4">
                            <InputText DisplayName="FirstName" class="form-control" @bind-Value="someModel.FirstName"></InputText>
                        </div>
                        <div class="col col-4">
                            <InputText DisplayName="FirstName" class="form-control" @bind-Value="someModel.FirstName"></InputText>
                        </div>
                        <div class="col col-4">
                            <InputText DisplayName="FirstName" class="form-control" @bind-Value="someModel.FirstName"></InputText>
                        </div>
                        <div class="col-4">
                            <InputText class="form-control" readonly @bind-Value="someModel.LastName"></InputText>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private SomeModel someModel = new SomeModel();
    
    public class SomeModel
    {
        public string FirstName { get; set; }
        public string LastName { get; set; } = "This is Last Name";
    }
}