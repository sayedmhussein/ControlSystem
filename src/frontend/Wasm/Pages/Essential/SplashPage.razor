@page "/"
@using WeeControl.Frontend.AppService
@using WeeControl.Frontend.AppService.GuiInterfaces.Home
@attribute [Route(ApplicationPages.SplashPage)]

@inject IHomeService UserService

<MudContainer Class="d-flex flex-grow-0 align-self-center justify-center justify-content-center">
    <MudProgressCircular class="align-self-center" Color="Color.Info" Indeterminate="true" Size="Size.Large" /> 
</MudContainer>

@code {
    protected override async void OnInitialized()
    {
        await Task.Delay(3000);
        await UserService.VerifyAuthentication();
        await base.OnInitializedAsync();
    }
}