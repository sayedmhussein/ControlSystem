@using WeeControl.Core.SharedKernel.Contexts.Essentials
<MudTable Items="@Feeds" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@IsLoading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Date/Time</MudTh>
        <MudTh>Subject</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Date/Time">@context.FeedTs</MudTd>
        <MudTd DataLabel="Feed" href="@context.FeedBody">@context.FeedBody</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter]
    public IEnumerable<HomeFeedModel> Feeds { get; set; }
    
    [Parameter]
    public bool IsLoading { get; set; }
}