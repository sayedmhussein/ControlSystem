@using WeeControl.Frontend.AppService
@using IAuthorizationService = WeeControl.Frontend.AppService.AppInterfaces.IAuthorizationService
@attribute [Route(ApplicationPages.Essential.OtpPage)]
@inject IAuthorizationService UserAuthorizationService

<MudPaper Style="max-width: 650px; align-content: center; align-self: center; justify-content: center">
    <MudCard>
        <MudCardContent>
            <MudTextField @bind-Value="@otp" Label="One Time Password" InputType="InputType.Password"></MudTextField>
        </MudCardContent>
        <MudCardActions>
            <MudButton OnClick="@(() => UserAuthorizationService.UpdateToken(otp))">Send</MudButton>
        </MudCardActions>
    </MudCard>
</MudPaper>


@code {
    private string otp = "0000";
}