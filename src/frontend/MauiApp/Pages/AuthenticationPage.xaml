<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeeControl.Frontend.MauiApp.Pages.AuthenticationPage"
             Title="Authentication"
             >

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                IsEnabled="True"
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center"
                WidthRequest="400">
                
                <Image
                    Source="dotnet_bot.png"
                    SemanticProperties.Description="Cute dot net bot waving hi to you!"
                    HeightRequest="200"
                    HorizontalOptions="Center" />
                
                <Entry Placeholder="Username"></Entry>
                
                <Entry Placeholder="Password" IsPassword="True"></Entry>
                
                <Button Text="Login" Clicked="Button_OnClicked"></Button>
                <ActivityIndicator IsRunning="True"></ActivityIndicator>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>