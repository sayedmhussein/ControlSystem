<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeeControl.Frontend.MauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mauiApp="clr-namespace:WeeControl.Frontend.MauiApp"
    xmlns:pages="clr-namespace:WeeControl.Frontend.MauiApp.Pages"
    xmlns:field="clr-namespace:WeeControl.Frontend.MauiApp.Pages.Business.FieldOperation"
    xmlns:flyout="clr-namespace:WeeControl.Frontend.MauiApp.Flyout"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.FlyoutHeader>
        <flyout:HeaderView></flyout:HeaderView>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <flyout:FooterView></flyout:FooterView>
    </Shell.FlyoutFooter>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Shell.TabBarIsVisible="False">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:DummyPage}"
            Route="HomePage"/>

        <ShellContent
        Title="Route"
        ContentTemplate="{DataTemplate field:RoutePage}"
        Route="MainPage" />

        <ShellContent
        Title="Other Page"
        ContentTemplate="{DataTemplate pages:DummyPage}"
        Route="OtherPage" />
    </FlyoutItem>

    <MenuItem Text="About" Clicked="AboutItem_Clicked"></MenuItem>

    <MenuItem Text="Logout" Clicked="MenuItem_Clicked_1"></MenuItem>
 
</Shell>

