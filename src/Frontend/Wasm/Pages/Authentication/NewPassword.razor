@page "/NewPassword"
@page "/Authentication/NewPassword"
@using WeeControl.Common.SharedKernel.DtosV1.Employee
@layout RestrictedLayout

@attribute [AllowAnonymous]
@inject NavigationManager navManager
@inject IAuthenticationService authentication

<div class="card">
    <h4 class="card-header">Please enter your new password</h4>
    <div class="card-body">
        <EditForm Model="@resetPasswordDto" OnValidSubmit="SetNewPassword">
            <DataAnnotationsValidator/>
            <div class="form-group">
                <label>New Password</label>
                <InputText @bind-Value="resetPasswordDto.Username" type="password" class="form-control"/>
                <ValidationMessage For="@(() => resetPasswordDto.Username)"/>
            </div>
            <div class="form-group">
                <label>Repeat Password</label>
                <InputText @bind-Value="resetPasswordDto.EmailAddress" type="password" class="form-control"/>
                <ValidationMessage For="@(() => resetPasswordDto.EmailAddress)"/>
            </div>
            <button class="btn btn-primary">
                @if (loading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Save
            </button>
            @if (!string.IsNullOrEmpty(stringAlert))
            {
                <div class="alert alert-danger mt-3 mb-0">@stringAlert</div>
            }
        </EditForm>
    </div>
</div>

@code
{
    private ResetPasswordDto resetPasswordDto = new();
    private bool loading;
    private string stringAlert;

    private void SetNewPassword()
    {
        stringAlert = "Toast is successful";
        throw new Exception("Test ya pro");
    }
}