@page "/index"
@page "/Home"
@using System.Security.Claims
@using WeeControl.Common.SharedKernel.Interfaces
@using WeeControl.Common.UserSecurityLib.Interfaces
@using IUserOperation = WeeControl.Common.SharedKernel.Interfaces.IUserOperation
@inject IUserOperation device

<h1>Hello, world!</h1>

Welcome to your new app.
<p class="flex-wrap">Hello World</p>

<div class="dropdown">
    <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Value</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var claim in claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
            </tbody>
        </table>
</div>

@code
{
    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; }
    
    private ICollection<Claim> claims = new List<Claim>();

    protected override async void OnInitialized()
    {
        await base.OnInitializedAsync();
        await GetClaims();
    }

    private async Task GetClaims()
    {
        foreach (var claim in (await AuthState).User.Claims)
        {
         claims.Add(claim);  
        }
    }
}
