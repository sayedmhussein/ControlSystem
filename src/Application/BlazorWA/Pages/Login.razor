@page "/login"
@using WeeControl.Applications.BaseLib.ViewModels.Common;
@inject IDevice device;

<form action="action_page.php" method="post">
    <div class="imgcontainer">
        <img src="img_avatar2.png" alt="Avatar" class="avatar">
    </div>

    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input value="@vm.Username" type="text" placeholder="Enter Username" name="uname" required>

        <label for="psw"><b>Password</b></label>
        <input value="@vm.Password" type="password" placeholder="Enter Password" name="psw" required>

        <button type="submit" onclick="@vm.LoginCommand.ExecuteAsync(null)">Login</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn">Cancel</button>
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
</form>

@code{
    private LoginViewModel vm = new LoginViewModel(null, null);
}